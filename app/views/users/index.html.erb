<div class="admin_title">

  <h1>Lista de usuarios</h1>

  <p id="notice"><%= notice %></p>
  
</div>

<div class="admin_info" align="center">

  <table width="65%">
	
  <tr>
    <th width="15%" align="center">Nome</th>
    <th width="30%" align="center">Apelidos</th>
    <th width="10%" align="center">Grupo</th>
    <th width="10%" align="center">Tipo</th>
    <th align="center">Opcións</th>
  </tr>

  <% @users.each do |user| %>
  <tr>
    <td width="15%" align="center"><%= user.name %></td>
    <td width="30%" align="center"><%= user.surname1 %> <%= user.surname2 %></td>
    <td width="10%" align="center"><%= user.class_group %></td>
    <td width="10%" align="center">
    	<% if user.tipe == 1 %>Mestre
    	<% elsif user.tipe == 2 %>Estudante
    	<% else %>Error
    	<% end %></td>
    <td align="center">
    	<%= link_to 'Trocar', edit_user_path(user) %>
    	<%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'Eliminar usuario?' } %>
    	| <%= link_to 'Acceder', user %>
    	</td>
  </tr>
  <% end %>

  </table>

  <%= will_paginate @users %>
  
</div>

<div class="admin_options"> 

  <%= link_to 'Novo usuario', new_user_path %> |
  <%= link_to 'Páxina principal', user_admin_path %>

</div>

